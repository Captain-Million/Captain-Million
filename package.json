{
  "name": "captain-million",
  "version": "1.0.0",
  "description": "Warehouse management, Data exchange, Advertising",
  "scripts": {
    "test": "cross-env NODE_ENV=test PORT=8080 nyc ava --serial",
    "watch:test": "npm run test --watch",
    "cover": "nyc npm run test",
    "check-coverage": "nyc check-coverage --statements 100 --branches 100 --functions 100 --lines 100",
    "start": "npm run clean && cross-env BABEL_DISABLE_CACHE=1 NODE_ENV=development nodemon index.js",
    "st": "npm run clean && cross-env BABEL_DISABLE_CACHE=1 NODE_ENV=development node index.js",
    "start:prod": "cross-env NODE_ENV=production node index.js",
    "bs": "npm run clean && npm run build && npm run build:server && npm run start:prod",
    "build": "cross-env NODE_ENV=production webpack --config webpack.config.prod.js",
    "build:server": "cross-env NODE_ENV=production webpack --config webpack.config.server.js",
    "clean": "rimraf dist",
    "lint": "eslint client server __demo-data",
    "postinstall": "npm run update-schema",
    "update-schema": "cross-env NODE_ENV=development node update-schema.js",
    "reset-database": "node __demo-data/postinstall.js",
    "heroku-postbuild": "npm run clean && npm run build && npm run build:server"
  },
  "pre-commit": [
    "lint",
    "test"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Captain-Million/Captain-Million.git"
  },
  "bugs": {
    "url": "https://github.com/Captain-Million/Captain-Million/issues"
  },
  "homepage": "https://github.com/Captain-Million/Captain-Million#readme",
  "author": "",
  "license": "MIT",
  "dependencies": {
    "babel-core": "^6.9.1",
    "babel-polyfill": "^6.9.1",
    "babel-register": "^6.9.0",
    "babel-relay-plugin": "0.10.0",
    "body-parser": "^1.15.1",
    "classnames": "^2.2.5",
    "compression": "^1.6.2",
    "cross-env": "5.0.0",
    "cuid": "^1.3.8",
    "express": "^4.13.4",
    "express-graphql": "^0.6.3",
    "extract-text-webpack-plugin": "^2.1.0",
    "graphql": "^0.9.1",
    "html-webpack-plugin": "^2.28.0",
    "mock-css-modules": "^1.0.0",
    "mockgoose": "^7.0.6",
    "mongoose": "^4.4.20",
    "prop-types": "^15.5.10",
    "react": "^15.1.0",
    "react-dom": "^15.1.0",
    "react-helmet": "^5.0.2",
    "react-redux": "^5.0.3",
    "react-relay": "0.10.0",
    "react-router": "^4.0.0",
    "react-router-dom": "^4.0.0",
    "react-test-renderer": "^15.5.4",
    "redux": "^3.5.2",
    "redux-devtools": "^3.3.1",
    "redux-devtools-dock-monitor": "^1.1.1",
    "redux-devtools-log-monitor": "^1.0.11",
    "redux-thunk": "^2.1.0",
    "webpack": "^2.2.1",
    "webpack-dev-middleware": "^1.6.1",
    "webpack-externals-plugin": "^1.0.0",
    "webpack-hot-middleware": "^2.10.0",
    "webpack-manifest-plugin": "^1.0.1"
  },
  "devDependencies": {
    "ava": "^0.18.2",
    "babel-eslint": "^7.1.1",
    "babel-loader": "7.0.0",
    "babel-plugin-transform-react-constant-elements": "^6.23.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.0",
    "babel-plugin-webpack-loaders": "^0.9.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-es2015-native-modules": "^6.9.4",
    "babel-preset-react": "^6.5.0",
    "babel-preset-react-optimize": "^1.0.1",
    "babel-preset-stage-0": "^6.5.0",
    "chunk-manifest-webpack-plugin": "^1.0.0",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^0.28.0",
    "css-modules-require-hook": "^4.0.1",
    "cssnano": "^3.7.0",
    "enzyme": "^2.7.1",
    "eslint": "^3.17.1",
    "eslint-config-airbnb": "15.0.1",
    "eslint-plugin-ava": "^4.2.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "5.0.3",
    "eslint-plugin-react": "7.0.1",
    "eventsource-polyfill": "^0.9.6",
    "file-loader": "^0.11.1",
    "json-loader": "^0.5.4",
    "nock": "^9.0.9",
    "nodemon": "^1.9.2",
    "nyc": "^10.1.2",
    "postcss-cssnext": "^2.6.0",
    "postcss-focus": "2.0.0",
    "postcss-loader": "2.0.5",
    "postcss-reporter": "^3.0.0",
    "pre-commit": "^1.1.3",
    "react-hot-loader": "^3.0.0-beta.2",
    "redux-ava": "^2.0.0",
    "rimraf": "^2.5.2",
    "style-loader": "0.17.0",
    "supertest": "^3.0.0",
    "url-loader": "^0.5.7"
  },
  "engines": {
    "node": ">=4"
  },
  "ava": {
    "files": [
      "client/**/*.spec.js",
      "server/**/*.spec.js"
    ],
    "source": [
      "client/**/*.js",
      "server/**/*.js"
    ],
    "failFast": true,
    "babel": "inherit",
    "require": [
      "./server/util/setup-test-env.js"
    ]
  },
  "nyc": {
    "include": [
      "client/**/*.js"
    ],
    "exclude": [
      "**/*.spec.js",
      "client/reducers.js",
      "client/store.js",
      "server/util/setup-test-env.js",
      "server/config.js"
    ],
    "reporter": [
      "lcov",
      "text",
      "html"
    ]
  }
}
